@model List<string>

@using System.IO

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Download</title>
</head>
<body>
    <h2>File Download</h2>
    @if (Model.Count ==0)
    {
        <h1>Loi roi</h1>
    }
    else
    {
        <ul>
            @for (var i = 0; i <= Model.Count - 1; i++)
            {
                <tr>
                    <td>@Model[i].ToString() </td>
                    <td>@Html.ActionLink("Downloads", "Downloads", new { FileName = @Model[i].ToString() }) </td>
                </tr>
            }
        </ul>
    }
</body>
</html>
